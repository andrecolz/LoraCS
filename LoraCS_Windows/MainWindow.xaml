<Window x:Class="LoraCS_win.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LoraCS_win"
        xmlns:hc="clr-namespace:HandyControl.Controls;assembly=HandyControl"

        
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="MainWindow" Width="1000" Background="#FF31363F" Height="600">
    <Grid Height="600" Width="1000">
        <ContentControl x:Name="mainContent"/>
        <Button Content="X" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,0,0" Click="CloseButtonClick" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="#FFED2B2A" FontSize="15" FontWeight="Bold"/>

    </Grid>

    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0,0,0,1" CornerRadius="0" />
    </WindowChrome.WindowChrome>


</Window>
